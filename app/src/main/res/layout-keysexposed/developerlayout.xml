<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout="@layout/curve_shape"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view0"
                android:layout_width="match_parent"

                android:layout_height="10dp"
                android:padding="20dp" />

            <TableLayout
                android:id="@+id/tableLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/view0"
                android:background="@drawable/curve_shape"
                android:padding="5dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/text1"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="App Developers"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <RelativeLayout
                        android:layout_below="@+id/text1"
                        android:layout_weight="1"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/arpit" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView1"
                            android:layout_centerHorizontal="true"
                            android:text="Arpit Agarwal"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#1565F0"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView1"
                            android:layout_centerHorizontal="true">


                            <ImageButton
                                android:id="@+id/imageButton1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/phone325"

                                />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_toRightOf="@+id/imageButton1"
                                android:padding="5dp"
                                android:text="9532511310"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#1565F0"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_below="@+id/text1"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ayush" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView2"
                            android:layout_centerHorizontal="true"
                            android:text="Ayush Jain"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#1565F0"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView3"
                            android:layout_centerHorizontal="true">


                            <ImageButton
                                android:id="@+id/imageButton2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/phone325" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_toRightOf="@+id/imageButton2"
                                android:padding="5dp"
                                android:text="Shailendra Singh"

                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#1565F0"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </RelativeLayout>

                </TableRow>
            </TableLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"

                android:layout_height="10dp"
                android:layout_below="@+id/tableLayout1"
                android:padding="20dp" />

            <TableLayout
                android:id="@+id/tableLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/view1"
                android:background="@drawable/curve_shape"
                android:padding="5dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"

                    >

                    <TextView
                        android:id="@+id/text2"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="Web Developers"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/row1"
                    android:paddingTop="10dp">

                    <RelativeLayout
                        android:layout_below="@+id/text2"
                        android:layout_weight="1"

                        >

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/tiwari" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView3"
                            android:layout_centerHorizontal="true"
                            android:text="Abhinav Tiwari"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#1565F0"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView5"
                            android:layout_centerHorizontal="true">


                            <ImageButton
                                android:id="@+id/imageButton3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/phone325" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_toRightOf="@+id/imageButton3"
                                android:padding="5dp"
                                android:text="8527787397"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#1565F0"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_below="@+id/text2"
                        android:layout_weight="1"
                        android:background="#fff">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/siffi" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView4"
                            android:layout_centerHorizontal="true"
                            android:text="Siffi Singh"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#1565F0"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView7"
                            android:layout_centerHorizontal="true">


                            <ImageButton
                                android:id="@+id/imageButton4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/phone325" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_toRightOf="@+id/imageButton4"
                                android:padding="5dp"
                                android:text="Shailendra Singh"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#1565F0"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </RelativeLayout>

                </TableRow>



            </TableLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"

                android:layout_height="10dp"
                android:layout_below="@+id/tableLayout2"
                android:padding="20dp" />


        </RelativeLayout>
    </ScrollView>
</LinearLayout>