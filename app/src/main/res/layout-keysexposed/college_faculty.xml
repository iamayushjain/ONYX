<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout="@layout/curve_shape"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view0"
                android:layout_width="match_parent"

                android:layout_height="10dp"
                android:padding="20dp" />

            <TableLayout
                android:id="@+id/tableLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/view0"
                android:background="@drawable/curve_shape"
                android:padding="5dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/text1"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="Chief Organiser"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#000"
                        android:textStyle="bold|italic"
                        />
                </TableRow>

                <TableRow>

                    <RelativeLayout
                        android:layout_below="@+id/text1"
                        android:layout_weight="1"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/vinnie" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageView1"
                            android:layout_centerHorizontal="true"
                            android:text="Ms.Vinnie Khanna Mathur"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#1565F0"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView1"
                            android:layout_centerHorizontal="true"
                            android:text="Dean, Student Affairs"
                            android:textColor="#1565F0"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView2"
                            android:layout_centerHorizontal="true"
                            android:text="Galgotias Educational Institutes"
                            android:textColor="#1565F0"
                            android:textStyle="bold|italic"
                            android:paddingBottom="10dp"/>





                    </RelativeLayout>


                </TableRow>
            </TableLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"

                android:layout_height="10dp"
                android:layout_below="@+id/tableLayout1"
                android:padding="20dp" />


        </RelativeLayout>
    </ScrollView>
</LinearLayout>